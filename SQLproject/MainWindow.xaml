<Window x:Class="SQLproject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLproject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="Pages" Grid.Column="1" IsEnabled="{Binding IsChecked, ElementName=EnableListBox}"
                 SelectionChanged ="ManagerWindow_SelectionChanged" FontSize="24" HorizontalAlignment="Center"
                 VerticalAlignment="Center" Panel.ZIndex="60" BorderBrush="White" Height="94" Width="100">
            <TextBlock Text="Tables" Margin="0,0,0,0" />
            <TextBlock Text="Querys" Margin="0,0,0,0" />
        </ListBox>
        <Frame x:Name="View" Grid.Column="0" NavigationUIVisibility="Hidden" Margin="50,50,0,50"/>
    </Grid>

</Window>
